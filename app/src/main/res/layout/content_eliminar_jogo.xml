<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".EliminarJogo"
    tools:showIn="@layout/activity_eliminar_jogo"
    tools:ignore="PrivateResource">

    <Button
        android:id="@+id/buttonEliminar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_button"
        android:layout_marginLeft="@dimen/margin_button"
        android:layout_marginTop="@dimen/margin_button"
        android:layout_marginEnd="@dimen/margin_button"
        android:layout_marginRight="@dimen/margin_button"
        android:onClick="Eliminar"
        android:text="@string/itemeliminarjogo"
        app:layout_constraintEnd_toStartOf="@+id/buttonEliminarCancelar"
        app:layout_constraintHorizontal_bias="0.435"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout" />

    <Button
        android:id="@+id/buttonEliminarCancelar"
        android:layout_width="wrap_content"
        android:layout_marginStart="@dimen/margin_button"
        android:layout_marginLeft="@dimen/margin_button"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_button"
        android:layout_marginEnd="@dimen/margin_button"
        android:layout_marginRight="@dimen/margin_button"
        android:onClick="Cancelar"
        android:text="@string/buttoncancelar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/TextViewEliminar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/nome_do_jogo" />
    </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>